@model  ASS2_20240802.Models.DoctorPatientMapping

@{
    ViewBag.Title = "Create Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label for="userEmail" class="control-label col-md-2">User Email:</label>
            <div class="col-md-10">
                <input type="email" name="userEmail" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@if (User.IsInRole("Doctor"))
{
    <p>
        @Html.ActionLink("Back to List", "MyPatients")
    </p>
}
else if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}
else if (User.IsInRole("User"))
{
    <p>
        @Html.ActionLink("Back to List", "MyDoctors")
    </p>
}
